{% extends "default.njk" %}

{% block content %}

    <article class="post" data-input-path="{{ page.filePathStem }}">
      	<h1 class="post-title">
		{{ title }}
	</h1>
      	<time class="post-date" datetime="{{ page.date }}">
		{{ date }}
	</time>
	{{ content | safe | trim }}
    </article>

    <div class="related">
      <h2>More</h2>
      <ul class="related-posts">
        {% for post in collections.posts | reverse %}
        {% if post.url != page.url %}
        <li>

			<a href="{{ post.url }}">
				{{ post.data.title }} <br /><small>{{ post.date }}</small>
			</a>
		
	</li>

        {% endif %}
        {% endfor %}
      </ul>
    </div>

{% endblock %}
